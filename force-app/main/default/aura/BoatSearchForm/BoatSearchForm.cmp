<aura:component implements="flexipage:availableForAllPageTypes" controller="BoatSearchFormAuraCtrl">
    <aura:attribute name="selectboatType" type="String"  access="global"/>
    <aura:attribute name="boatTypeList" type="BoatType__c[]" access="global"/>
    <aura:attribute name="showNewButton" type="Boolean" default="true"/>
    <!--<aura:registerEvent name="createBoat" type="c:BoatCreate"/>-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:registerEvent name="formsubmit" type="c:FormSubmit"/>

    <form>
        <lightning:layout horizontalAlign="center" verticalAlign="end">
            <lightning:layoutItem padding="horizontal-medium">
                <lightning:select aura:id="boatTypes" name="selectType" label="" value="{!v.selectboatType}" onchange="{!c.handleChange}">
                    <option value="All types" selected="true">All types</option>
                    <aura:iteration var="boatType" items="{!v.boatTypeList}">
                        <option value="{!boatType.Name}" text="{!boatType.Name}"/>
                    </aura:iteration>
                </lightning:select>
            </lightning:layoutItem>
            <lightning:layoutItem>
                <!-- Brand variant: Identifies the primary action in a group of buttons -->
                <lightning:button variant="brand" label="Search"  onclick="{! c.onFormSubmit }" />
                <!-- Brand variant: Identifies the primary action in a group of buttons -->
                <aura:if isTrue="{!v.showNewButton}">
                    <lightning:button label="New" onclick="{!c.New}" />
                </aura:if>
            </lightning:layoutItem>
        </lightning:layout>
    </form>
</aura:component>